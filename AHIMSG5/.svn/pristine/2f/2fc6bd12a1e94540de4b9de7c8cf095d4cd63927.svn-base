		.menu ul {
            list-style-type: none;
            padding-left: 20px;
        }
       .menu ul li {
            margin: 5px 0;
            position: relative;
        }
        ul li::before {
            content: '';
            position: absolute;
            left: -20px;
            top: 0;
            width: 1px;
            height: 100%;
            background-color: #000;
        }
       .menu ul li::after {
            content: '';
            position: absolute;
            left: -20px;
            top: 10px;
            width: 10px;
            height: 1px;
            background-color: #000;
        }
       .menu ul li a {
            position: relative;
            padding-left: 10px;
            text-decoration: none;
            color: #000;
        }
       .menu ul li a::before {
            content: '';
            position: absolute;
            left: -10px;
            color: #000;
        }
		
		.menu ul li a:hover {
            background-color: lightblue; /* Change to any color you prefer */
            color: white;
        }
		
		.menu ul li a.selected {
            background-color: darkblue; /* Change to any color you prefer */
            color: white;
		}
				
