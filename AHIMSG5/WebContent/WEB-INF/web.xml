<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>AHIMSG5</display-name>
	<context-param>
		<param-name>SSO_TICKET_EXPIRATION_TGT_SECONDS</param-name>
		<param-value>9000</param-value>
	</context-param>
	<context-param>
		<param-name>SSO_TICKET_EXPIRATION_ST_SECONDS</param-name>
		<param-value>9000</param-value>
	</context-param>
	<listener>
		<listener-class>org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap</listener-class>
	</listener>
	<listener>
		<listener-class>application.listeners.HISApplicationContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>application.listeners.HISApplicationSessionListener</listener-class>
	</listener>
	<listener>
		<listener-class>application.listeners.HISApplicationRequestListener</listener-class>
	</listener>
	<listener>
		<listener-class>application.listeners.VisitCounterListner</listener-class>
	</listener>
	<filter>
		<filter-name>HISAppRequestFilter</filter-name>
		<filter-class>application.filters.HISApplicationRequestFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>HISAppRequestFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>hislogin.transactions.action.CharacterEncodingFilter</filter-class>
</filter>

<filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
</filter-mapping> 
	<context-param>
		<param-name>resteasy.scan</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>resteasy.servlet.mapping.prefix</param-name>
		<param-value>/services/restful</param-value>
	</context-param>
	<servlet>
		<servlet-name>Resteasy</servlet-name>
		<servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Resteasy</servlet-name>
		<url-pattern>/services/restful/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SNOMEDCTServerServlet</servlet-name>
		<servlet-class>application.servlet.SNOMEDCTServerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SNOMEDCTServerServlet</servlet-name>
		<url-pattern>/snomedct/csnoserv/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SNOMEDCTServerServlet</servlet-name>
		<url-pattern>/snomedct/csnofinder/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>alert/AlertClient</servlet-name>
		<servlet-class>alert.AlertClient</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>alert/AlertClient</servlet-name>
		<url-pattern>/alert/AlertClient</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>FormFlowXACTION</servlet-name>
		<servlet-class>hisglobal.FormFlowX.action.FormFlowXACTION</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FormFlowXACTION</servlet-name>
		<url-pattern>/FFXACTION</url-pattern>
	</servlet-mapping>
	<security-constraint>
		<display-name>SecurityConstraint</display-name>
		<web-resource-collection>
			<web-resource-name>restricted methods</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>HEAD</http-method>
			<http-method>OPTIONS</http-method>
		</web-resource-collection>
		<auth-constraint />
	</security-constraint>
	<session-config>
		<session-timeout>240</session-timeout>
		<cookie-config>
			<name>HID</name>
			<http-only>true</http-only>
		</cookie-config>
	</session-config>
	<resource-ref>
		<description>
			Resource reference to a factory for java.sql.Connection
			instances that may be used for talking to a particular
			database that is configured in the server.xml file.
		</description>
		<res-ref-name>AHIS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	 
</web-app>